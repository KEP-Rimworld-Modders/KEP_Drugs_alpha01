<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>KEP_Dermizer</defName>
    <label>dermizer</label>
    <description>A regenerative ointment that heals dermal scars over time. Has no effect on internal organs or eyes.</description>
    <descriptionHyperlinks>

    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/Dermizer</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MarketValue>76</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
      <Flammability>1.0</Flammability>
    </statBases>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>KEP_DermizerHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>KEP_DermizerProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>3</Neutroamine>
      <KEP_PoisonIvyLeaves>20</KEP_PoisonIvyLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1011</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>KEP_DermizerHigh</defName>
    <label>dermizer</label>
    <description>Ointment that heals skin scars over time.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.9</severityPerDay>
        <showHoursToRecover>false</showHoursToRecover>
      </li>
      <li Class="KEP_Drugs.KEPHediffCompProperties_SelectiveRegeneration">
        <exclusionList>
          <li>Brain</li>
          <li>Eye</li>
          <li>Heart</li>
          <li>Liver</li>
          <li>Lung</li>
          <li>Kidney</li>
          <li>Stomach</li>
        </exclusionList>
        <minTimeToHeal>8</minTimeToHeal>
        <maxTimeToHeal>15</maxTimeToHeal>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.1</painOffset>
      </li>
    </stages>
  </HediffDef>

</Defs>